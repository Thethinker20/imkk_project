                                <input class="mt-2 passInput" type="text" placeholder="Username" name="username"
                                    id="username">
                            </div>
                            <div class="input-group text-center" style="width: auto; min-width: 0;">
                                <input class="passInput1" type="password" placeholder="Password" name="password"
                                    id="password">
                                <div class="input-group-append">
                                    <span class="input-group-text spn" style="padding: 0.35rem;">
                                        <i class="fa fa-fw fa-eye" id="togglePassword"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-lg-7 mt-4">
                                <button type="submit" value="Login" class="btn btn-primary butLogin">LogIn</button>
                            </div>
                        </div>
                        <div class="col-lg-7 mt-2 inP">
                            <p><a href="/language_reg" class="regLink">Register</a></p>
                        </div>
                    </div>
