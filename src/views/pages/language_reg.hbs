<body>
    <section class="sec_lang">
        <div class="container pl-3">
            <div class="row">
                <div class="col-md-4">
                    <div class="char_leo_bg">
                        <img src="/media/character_leo.png" alt="">
                    </div>
                </div>
                <div class="col-md-8 char_text">
                    <div class="row lang_title pl-2">
                       <h2 class="font-weight-bold">Welcome future student</h2>
